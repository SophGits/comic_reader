<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="col-25">
  <div class="inputgroup"><%= f.label :username %><br />
  <%= f.text_field :username, :autofocus => true %></div>

  <div class="inputgroup"><%= f.label :email %><br />
  <%= f.email_field :email %></div> <!-- GIVE CHOICE OF 'MY EMAIL IS MY USERNAME' -->
<p>
  <div class="inputgroup"><%= f.label :avatar %><br />
    Choose file:
  <%= f.file_field :avatar %></div>
  or link to image:
  <%= f.url_field :remote_avatar_url %></div>
</p>
  <div class="inputgroup"><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div class="inputgroup"><%= f.submit "Sign up" %></div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end -%>

<!-- <%= render "devise/shared/links" %> -->
<!-- remove shared links - just put 'forgot password' -->
</div>