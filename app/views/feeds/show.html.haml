%p#notice= notice
.col-100
  .col-25
    %h1="#{@feed.title}"
  .col-26
    =image_tag (@feed.logo), class: "low"
    - if Subscription.is_subscribed?(current_user.id, @feed.id)
      = link_to 'Unsubscribe', "/feeds/#{@feed.id}/subscriptions", method: :delete
    - else
      = link_to 'Subscribe', "/feeds/#{@feed.id}/subscriptions", method: :post
  .col-middle
    / %ul
    /   %li
    /     %b Feed title:
    /     = @feed.title
    /   %li
    /     %b Feed logo:
    /     =image_tag @feed.logo
    /   %li
    /     %b Main url:
    /     = @feed.main_url
    /   %li
    /     %b Feed url:
    /     = @feed.feed_url
    /   %li
    /     %b Keywords:
    /     = @feed.keywords
    /   %li
    /     %b Summary:
    /     = @feed.summary
    /   %li
    /     %b Author:
    /     = @feed.author
    /   %li
    /     %b Flag count:
    /     = @feed.flag_count
    /   %li
    /     %b Up vote count:
    /     = @feed.up_vote_count
    /   %li
    /     %b Down vote count:
    /     = @feed.down_vote_count

    /   = link_to 'Edit', edit_feed_path(@feed)
    /   \|
    /   = link_to 'Back', feeds_path
    /   \|
    /   = link_to 'Add a strip to feed', new_feed_strip_path(@feed)
    /   \|
    #strip
      / .keywords
      /   Keywords:
      /   / = @strip.keywords
      / .down-votes
      /   Down-votes:
      /   / = @strip.down_vote_count
      / .created-at
      /   Created at:
      /   / = @strip.created_at
      .image
        / =image_tag (@strip.strip_url)
      .up-votes
        Liked by
        %span
        people
      .comments-count
        %a#view_comments{href: "#"}
          View comments:
          %span
      .links
        %a.previous << Previous
        %a.next Next >>
    .col-foot

  :javascript
    $(function() {

      function getStrip(strip_id) {
        $.ajax({
          url: "/feeds/" + #{@feed.id} + "/get_strip",
          type: "GET",
          dataType: "json",
          data: {
            strip_id: strip_id
          },
          success: function(strip) {
            var $strip = $("#strip");
            console.log(strip);
            $("#strip .keywords").append(strip.keywords);
            $("#strip .up-votes span").append(strip.up_vote_count);
            $("#strip .down-votes").append(strip.down_vote_count);
            $("#strip .comments-count span").append(strip.comments_count);
            $("#strip #view_comments").attr("href",
              "/feeds/"+strip.feed_id+"/strips/"+strip.id
            )
            $("#strip .image").html("");
            $("#strip .image").append("<img src='" + strip.strip_url + "'>");

            $("#strip .links .previous").data("strip-id", strip.previous_strip_id);
            $("#strip .links .next").data("strip-id", strip.next_strip_id);
          }
        });
      }

      $(".previous, .next").click(function(e) {
        e.preventDefault();

        var strip_id = $(this).data("strip-id");
        getStrip(strip_id);
      });

      getStrip(null);
    });