= form_for [@message] do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :recipient_id
    = f.select :recipient_id, options_from_collection_for_select(@other_users, 'id', 'username')
  .field
    = f.label :content
    = f.text_area :content, {required: :required}
  / .field
  /   = f.label :is_read
  /   = f.check_box :is_read
  .actions
    = f.submit 'Save'

