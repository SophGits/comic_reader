%h1 Listing feeds

%table
  %tr
    %th Feed title
    %th Feed logo
    / %th Main url
    / %th Feed url
    %th Keywords
    %th Summary
    %th Author
    %th Flag count
    %th Up vote count
    %th Down vote count
    %th
    %th
    %th

  - @feeds.each do |feed|
    %tr
      %td.comic.feed-title{"data-feed-id" => "#{feed.id}"}= feed.title
      %td= image_tag feed.logo
      / %td= feed.main_url
      / %td= feed.feed_url
      %td= feed.keywords
      %td= feed.summary
      %td= feed.author
      %td= feed.flag_count
      %td= feed.up_vote_count
      %td= feed.down_vote_count
      %td= link_to 'Show', feed
      %td= link_to 'Edit', edit_feed_path(feed)
      %td= link_to 'Destroy', feed, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Feed', new_feed_path

